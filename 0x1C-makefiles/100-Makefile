CC = gcc
SRC = main.c evance.c
OBJ = $(SRC:.c=.o)
NAME = evance
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = /bin/rm -f

.PHONY: all clean oclean fclean re
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

m.h:
